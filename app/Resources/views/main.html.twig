{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bootstrap/css/bootstrap-theme.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('font-awesome-4.7.0/css/font-awesome.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('plugins/pnotify.custom.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('admin/stylee.css') }}" rel="stylesheet" media="screen">
{% endblock %}

{% block body %}
    <header>{{ include('header.html.twig') }}</header>

    <article id="content">
        {% block content %}{% endblock %}
        {{ include('modals.html.twig') }}
    </article>

    <footer>{{ include('footer.html.twig') }}</footer>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('jQuery/jquery.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/pnotify.custom.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('admin/scripts.js') }}"></script>
{% endblock %}