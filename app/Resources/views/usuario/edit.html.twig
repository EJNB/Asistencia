{% form_theme edit_form 'form/fields.html.twig' %}
{% extends 'main.html.twig' %}

{% block content %}
    <h1 class="page-header">Editar Usuario {{ usuario.name }}</h1>

    {{ form_start(edit_form) }}
    <div class="col-md-3">
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.email) }}
        {{ form_row(edit_form.username) }}
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
        {{ form_label(edit_form.isActive) }}
        <div class="switch">
            {{ form_widget(edit_form.isActive) }}
            {{ form_label(edit_form.isActive) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.roles) }}
            {{ form_widget(edit_form.roles) }}
            {{ form_errors(edit_form.roles) }}
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Editar</button>
            <a href="{{ path('usuario_index') }}" class="btn btn-default">Volver al listado</a>
        </div>
    </div>
    {{ form_end(edit_form) }}


